@model MyWebApp.Models.AcademicProgram
@using System.Text.Json;
@using System.Text.Json.Serialization;

@{
    ViewData["Title"] = $"Редактирование: {Model.Name}";

    var jsonOptions = new JsonSerializerOptions
    {
        PropertyNamingPolicy = JsonNamingPolicy.CamelCase,
        ReferenceHandler = ReferenceHandler.IgnoreCycles,
        WriteIndented = false
    };

    var modelJson = JsonSerializer.Serialize(Model, jsonOptions);
}

<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />

<div class="container program-container">


    <div style="margin-bottom: 20px;">
        <a asp-action="Index" class="back-button"
            style="text-decoration: none; color: var(--accent-dark); font-weight: 500;">
            <span class="back-icon" style="margin-right: 5px;">←</span> Назад к списку
        </a>
    </div>

    <form asp-action="Edit" method="post" id="createForm">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Status" />

        <div class="card-style"
            style="border: 1px solid #ccc; padding: 30px; border-radius: var(--radius); background-color: white;">

            <div style="text-align: center; margin-top: 15px; margin-bottom: 30px;">
                <h2 style="color: var(--text-main); font-size: 1.8rem; margin-bottom: 15px;">Редактирование программы
                </h2>
                <div class="text-muted">@Model.Name</div>
                <div asp-validation-summary="All" class="text-danger" style="margin-top: 10px;"></div>
            </div>


            <div style="display: grid; grid-template-columns: 2fr 1fr; gap: 30px; padding-top: 10px;">

                <div
                    style="background-color: var(--bg-element); padding: 20px; border-radius: var(--radius); border: 1px solid #ccc; height: fit-content;">
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px;">
                        <div class="input-group-custom" style="grid-column: span 2;">
                            <label asp-for="Name" class="info-label">Название программы *</label>
                            <input asp-for="Name" class="form-control-custom"
                                placeholder="Введите название программы" />
                        </div>
                        <div class="input-group-custom">
                            <label asp-for="DisciplineId" class="info-label">Дисциплина *</label>
                            <select asp-for="DisciplineId" class="form-control-custom" id="disciplineSelect"
                                asp-items="ViewBag.Disciplines">
                                <option value="" disabled>-- Выберите --</option>
                            </select>
                        </div>
                        <div class="input-group-custom">
                            <label asp-for="StartYear" class="info-label">Год начала *</label>
                            <input asp-for="StartYear" type="number" class="form-control-custom" />
                        </div>
                        <div class="input-group-custom" style="grid-column: span 2;">
                            <label asp-for="SpecialtyId" class="info-label">Специальность *</label>
                            <select asp-for="SpecialtyId" class="form-control-custom" id="specialtySelect"
                                asp-items="ViewBag.Specialties">
                                <option value="" disabled>-- Выберите --</option>
                            </select>
                        </div>
                    </div>
                </div>


                <div
                    style="background-color: var(--bg-element); padding: 20px; border-radius: var(--radius); border: 1px solid #ccc; height: fit-content;">
                    <div class="info-item">
                        <div class="info-label" style="font-size: 0.9em; color: var(--text-muted);">Направление</div>
                        <input type="text" id="directionField" class="readonly-info-display" readonly value="—"
                            style="width:100%; border:none; background:transparent; font-weight:bold; color: #333;" />
                    </div>
                    <div class="info-item" style="margin-top: 15px;">
                        <div class="info-label" style="font-size: 0.9em; color: var(--text-muted);">Срок обучения</div>
                        <input type="text" id="durationField" class="readonly-info-display" readonly value="—"
                            style="width:100%; border:none; background:transparent; font-weight:bold; color: #333;" />
                    </div>
                    <div class="info-item" style="margin-top: 15px;">
                        <div class="info-label" style="font-size: 0.9em; color: var(--text-muted);">Квалификация</div>
                        <textarea id="competenciesField" class="readonly-info-display" readonly rows="4"
                            style="width:100%; border:none; background:transparent; resize:none; color: #333;">—</textarea>
                    </div>
                </div>
            </div>

            <hr style="border-top: 1px solid #ccc; margin: 30px 0;" />


            <h5 style="color: var(--text-main); margin-bottom: 20px;">Преподавательский состав</h5>
            <div id="teachersSection">
                <div id="teacherHelp" class="text-muted small mb-3">
                    <i class="fas fa-info-circle"></i> Загрузка преподавателей...
                </div>
                <table class="table-soft-bordered" id="teachersTable" style="width: 100%; border-collapse: collapse;">
                    <thead style="background: #f8f9fa;">
                        <tr>
                            <th style="padding: 10px; border: 1px solid #eee;">Преподаватель</th>
                            <th style="padding: 10px; border: 1px solid #eee;">Тип участия</th>
                        </tr>
                    </thead>
                    <tbody id="teachersList"></tbody>
                </table>
            </div>

            <hr style="border-top: 1px solid #ccc; margin: 40px 0;" />


            <h4 style="color: var(--accent-dark); margin-bottom: 30px;">Учебный план по семестрам</h4>

            <div id="semestersContainer">

            </div>

            <div style="text-align: center; margin-top: 20px;">
                <button type="button" class="btn"
                    style="border: 2px dashed var(--accent-dark); color: var(--accent-dark); background: transparent; padding: 10px 20px;"
                    onclick="addNewSemester()">
                    <i class="fas fa-plus-circle"></i> ДОБАВИТЬ СЕМЕСТР
                </button>
            </div>

            <hr style="border-top: 1px solid #ccc; margin: 40px 0;" />


            <h4 style="color: var(--accent-dark); margin-bottom: 30px;">Методические материалы</h4>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 30px; margin-bottom: 40px;">
                <div class="input-group-custom info-data-block"
                    style="border: 1px solid #ccc; padding: 15px; border-radius: var(--radius);">
                    <label asp-for="Goals" class="info-label methodical-label">Цели и задачи</label>
                    <textarea asp-for="Goals" class="form-control-custom" rows="4"
                        style="resize:vertical; width: 100%;"></textarea>
                    <span asp-validation-for="Goals" class="text-danger"></span>
                </div>
                <div class="input-group-custom info-data-block"
                    style="border: 1px solid #ccc; padding: 15px; border-radius: var(--radius);">
                    <label asp-for="Competencies" class="info-label methodical-label">Компетенции</label>
                    <textarea asp-for="Competencies" class="form-control-custom" rows="4"
                        style="resize:vertical; width: 100%;"></textarea>
                    <span asp-validation-for="Competencies" class="text-danger"></span>
                </div>
                <div class="input-group-custom info-data-block"
                    style="border: 1px solid #ccc; padding: 15px; border-radius: var(--radius);">
                    <label asp-for="Requirements" class="info-label methodical-label">Требования</label>
                    <textarea asp-for="Requirements" class="form-control-custom" rows="4"
                        style="resize:vertical; width: 100%;"></textarea>
                    <span asp-validation-for="Requirements" class="text-danger"></span>
                </div>
                <div class="input-group-custom info-data-block"
                    style="border: 1px solid #ccc; padding: 15px; border-radius: var(--radius);">
                    <label asp-for="DisciplinePosition" class="info-label methodical-label">Место дисциплины</label>
                    <textarea asp-for="DisciplinePosition" class="form-control-custom" rows="4"
                        style="resize:vertical; width: 100%;"></textarea>
                    <span asp-validation-for="DisciplinePosition" class="text-danger"></span>
                </div>
                <div class="input-group-custom info-data-block"
                    style="border: 1px solid #ccc; padding: 15px; border-radius: var(--radius); grid-column: span 2;">
                    <label asp-for="Literature" class="info-label methodical-label">Литература</label>
                    <textarea asp-for="Literature" class="form-control-custom" rows="4"
                        style="resize:vertical; width: 100%;"></textarea>
                    <span asp-validation-for="Literature" class="text-danger"></span>
                </div>
            </div>

            <div style="margin-top: 30px; text-align: center;">
                <button type="submit" class="btn btn-primary btn-lg" style="padding: 12px 40px; font-weight: bold;">
                    <i class="fas fa-save mr-2"></i> СОХРАНИТЬ ИЗМЕНЕНИЯ
                </button>
            </div>

        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        const modelData = @Html.Raw(modelJson);
        let semesterIndex = 0;


        function createTeacherRow(teacherId = null, participationType = null, teacherName = null) {
            const displayTeacherName = teacherName || `ID: ${teacherId}`;
            const pType = participationType || '—';
            return `
                            <tr>
                                <td style="padding: 10px; border: 1px solid #eee;">
                                    <input type="hidden" name="TeacherId" value="${teacherId}" />
                                    <span class="font-weight-bold" style="color: #333;">${displayTeacherName}</span>
                                </td>
                                <td style="padding: 10px; border: 1px solid #eee;">
                                    <input type="hidden" name="ParticipationType" value="${participationType}" />
                                    <span style="background: #eee; padding: 4px 8px; border-radius: 4px; font-size: 0.9em;">${pType}</span>
                                </td>
                            </tr>
                        `;
        }


        function renderSemesterBlock(data = null) {
            const container = document.getElementById('semestersContainer');
            const idx = semesterIndex;

            const sVal = data ? data.semester : (idx + 1);
            const lec = data ? data.lectures : "";
            const lab = data ? data.labs : "";
            const sem = data ? data.seminars : "";
            const self = data ? data.selfStudy : "";
            const assess = data ? data.assessmentType : "";

            const block = document.createElement('div');

            block.className = "semester-card card-style";
            block.setAttribute('data-index', idx);
            block.style.cssText = "margin-bottom: 30px; padding: 20px; border: 1px solid rgb(221, 221, 221); background-color: var(--bg-element);";


            const tableInputStyle = "width:100%; border:none; padding:8px; background: white;";

            block.innerHTML = `
                            <div class="semester-header-custom" style="display: flex; justify-content: space-between; border-bottom: 2px solid var(--accent-color); padding-bottom: 10px; margin-bottom: 20px;">
                                <div style="display: flex; align-items: center; gap: 10px;">
                                    <h5 style="color: var(--accent-dark); font-weight: 700; margin: 0;">Семестр</h5>
                                    <input type="number" name="WorkLoads[${idx}].Semester" class="form-control-custom" style="width: 70px; padding: 5px; text-align:center;" required="" min="1" value="${sVal}">
                                </div>
                                <button type="button" class="btn" style="color: #95a5a6; border: 1px solid #bdc3c7; padding: 5px 10px; border-radius: 4px; background: transparent; cursor: pointer;" onclick="removeSemester(this)">
                                    <i class="fas fa-trash-alt"></i> Удалить
                                </button>
                            </div>
                
                            <div style="margin-bottom: 25px;">
                                 <table class="table-soft-bordered workload-table" style="text-align: center;">
                                    <thead>
                                        <tr>
                                            <th>Лекции</th>
                                            <th>Лаб.</th>
                                            <th>Практ.</th>
                                            <th>СРС</th>
                                            <th>Аттестация</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="padding: 0;"><input type="number" name="WorkLoads[${idx}].Lectures" class="table-input text-center" style="${tableInputStyle}" placeholder="0" value="${lec}"></td>
                                            <td style="padding: 0;"><input type="number" name="WorkLoads[${idx}].Labs" class="table-input text-center" style="${tableInputStyle}" placeholder="0" value="${lab}"></td>
                                            <td style="padding: 0;"><input type="number" name="WorkLoads[${idx}].Seminars" class="table-input text-center" style="${tableInputStyle}" placeholder="0" value="${sem}"></td>
                                            <td style="padding: 0;"><input type="number" name="WorkLoads[${idx}].SelfStudy" class="table-input text-center" style="${tableInputStyle}" placeholder="0" value="${self}"></td>
                                            <td style="padding: 0;">
                                                <select name="WorkLoads[${idx}].AssessmentType" class="table-input" style="width:100%; border:none; padding:8px; text-align: center; color: var(--accent-dark); font-weight:500; background: white;">
                                                    <option value="">--</option>
                                                    <option value="Экзамен" ${assess === 'Экзамен' ? 'selected' : ''}>Экзамен</option>
                                                    <option value="Зачет" ${assess === 'Зачет' ? 'selected' : ''}>Зачет</option>
                                                    <option value="Курсовая" ${assess === 'Курсовая' ? 'selected' : ''}>Курсовая</option>
                                                </select>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>

                            <div>
                                <h6 style="color: var(--text-muted); margin-bottom: 10px;">Разделы дисциплины:</h6>
                                <table class="table-soft-bordered">
                                    <thead>
                                        <tr>
                                            <th style="width: 50px;">#</th>
                                            <th style="text-align: left;">Название раздела</th>
                                            <th style="text-align: left;">Краткое содержание</th>
                                            <th style="width: 50px;">Лек.</th>
                                            <th style="width: 50px;">Лаб.</th>
                                            <th style="width: 50px;">Сем.</th>
                                            <th style="width: 50px;">СРС</th>
                                            <th style="width: 40px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody class="sections-body">
                                        </tbody>
                                </table>
                                <button type="button" class="btn" style="margin-top: 10px; font-size: 0.9em; color: var(--accent-dark); border: 1px dashed var(--accent-dark); background: transparent; padding: 5px 10px; border-radius: 4px; cursor: pointer;" onclick="addEmptySectionRow(${idx}, this)">
                                    <i class="fas fa-plus"></i> Добавить раздел
                                </button>
                            </div>
                        `;

            container.appendChild(block);


            if (data && data.sections && data.sections.length > 0) {
                const tbody = block.querySelector('.sections-body');
                data.sections.forEach(sec => {
                    renderSectionRow(tbody, idx, sec);
                });
            }

            semesterIndex++;
        }


        function renderSectionRow(tbody, parentIndex, data = null) {
            const sectionIndex = tbody.children.length;
            const row = document.createElement('tr');

            const name = data ? data.name : '';
            const desc = data ? data.description : '';
            const lH = data ? data.lectureHours : '';
            const laH = data ? data.labHours : '';
            const sH = data ? data.seminarHours : '';
            const ssH = data ? data.selfStudyHours : '';


            const cellInputStyle = "width: 100%; border: none; padding: 8px; background: transparent;";
            const centerStyle = "text-align: center;";

            row.innerHTML = `
                            <td style="padding: 0;">
                                <input type="text" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].Index" style="${cellInputStyle} background:#f9f9f9;" class="text-center" value="${sectionIndex + 1}" readonly />
                            </td>
                            <td style="padding: 0;">
                                <input type="text" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].Name" style="${cellInputStyle}" placeholder="Название..." required value="${name}" />
                            </td>
                            <td style="padding: 0;">
                                <textarea name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].Description" style="${cellInputStyle} resize:vertical;" rows="1" placeholder="Краткое...">${desc}</textarea>
                            </td>
                            <td style="padding: 0;"><input type="number" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].LectureHours" style="${cellInputStyle} ${centerStyle}" value="${lH}" /></td>
                            <td style="padding: 0;"><input type="number" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].LabHours" style="${cellInputStyle} ${centerStyle}" value="${laH}" /></td>
                            <td style="padding: 0;"><input type="number" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].SeminarHours" style="${cellInputStyle} ${centerStyle}" value="${sH}" /></td>
                            <td style="padding: 0;"><input type="number" name="WorkLoads[${parentIndex}].Sections[${sectionIndex}].SelfStudyHours" style="${cellInputStyle} ${centerStyle}" value="${ssH}" /></td>
                            <td class="text-center" style="padding: 0;">
                                <button type="button" class="btn" style="color: #95a5a6; background: transparent; border: none; cursor: pointer; padding: 8px;" onclick="this.closest('tr').remove()" title="Удалить строку">
                                    <i class="fas fa-trash-alt"></i>
                                </button>
                            </td>
                        `;
            tbody.appendChild(row);
        }


        function addEmptySectionRow(parentIndex, btn) {
            const tbody = btn.previousElementSibling.querySelector('.sections-body');
            renderSectionRow(tbody, parentIndex, null);
        }


        function addNewSemester() {
            renderSemesterBlock(null);
        }


        function removeSemester(btn) {
            if (confirm('Удалить этот семестр?')) {
                btn.closest('.semester-card').remove();
            }
        }


        $(document).ready(function () {


            if (modelData.workLoads && modelData.workLoads.length > 0) {
                modelData.workLoads.sort((a, b) => a.semester - b.semester);
                modelData.workLoads.forEach(wl => {
                    renderSemesterBlock(wl);
                });
            }


            $('#specialtySelect').change(function () {
                var specialtyId = $(this).val();
                if (specialtyId) {
                    $.ajax({
                        url: '@Url.Action("GetSpecialtyDetails", "AcademicProgram")',
                        type: 'GET',
                        data: { specialtyId: specialtyId },
                        success: function (data) {
                            $('#directionField').val(data.direction);
                            $('#durationField').val(data.duration);
                            $('#competenciesField').val(data.competencies);
                        },
                        error: function () {
                            $('#directionField').val('Ошибка загрузки');
                        }
                    });
                } else {
                    $('#directionField').val('—');
                    $('#durationField').val('—');
                    $('#competenciesField').val('—');
                }
            });

            $('#disciplineSelect').change(function () {
                var disciplineId = $(this).val();

                $('#teachersList').empty();

                if (disciplineId) {
                    $('#teachersTable').slideDown(50);

                    $.ajax({
                        url: '@Url.Action("GetDisciplineTeachers", "AcademicProgram")',
                        type: 'GET',
                        data: { disciplineId: disciplineId },
                        success: function (data) {
                            if (data.assignedTeachers && data.assignedTeachers.length > 0) {
                                data.assignedTeachers.forEach(function (dt) {
                                    const row = createTeacherRow(dt.id, dt.participationType, dt.name);
                                    $('#teachersList').append(row);
                                });
                            } else {
                                $('#teachersTable').slideUp(200);
                            }
                        },
                        error: function () {
                            $('#teachersTable').slideUp(200);
                            $('#teacherHelp').html(`<span class="text-danger"><i class="fas fa-exclamation-triangle"></i> Ошибка загрузки списка преподавателей.</span>`);
                        }
                    });
                } else {
                    $('#teachersTable').slideUp(200);
                    $('#teacherHelp').html(`<i class="fas fa-info-circle"></i> Выберите дисциплину выше, чтобы загрузить список.`);
                }
            });

            if ($('#specialtySelect').val()) $('#specialtySelect').trigger('change');
            if ($('#disciplineSelect').val()) $('#disciplineSelect').trigger('change');
        });
    </script>
}